@model IEnumerable<VoziBa.Models.Vozilo>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Trenutna ponuda vozila:";
    var userRole = Context.Session.GetString("UserRole");
}

<div class="vozila-container">
    <h1 class="text-center my-4">Naša Ponuda Vozila</h1>

    @* Dodajte dugme "Dodaj Novo Vozilo" samo ako je korisnik vlasnik ili administrator *@
    @if (userRole == "vlasnik" || userRole == "administrator")
    {
        <div class="text-right mb-3">
            <a asp-controller="Voziloes" asp-action="Objavi" class="btn" style="background-color: #E91E63; color: white;">
                Dodaj Novo Vozilo
            </a>
        </div>
    }

    <form asp-action="Index" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    <label for="selectedBrend">Marka vozila:</label>
                    <select name="selectedBrend" id="selectedBrend" class="form-control" onchange="this.form.submit()">
                        @foreach (var item in ViewBag.Brendovi)
                        {
                            <option value="@item.Value" selected="@(item.Selected)">@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label for="selectedGrad">Grad:</label>
                    <select name="selectedGrad" id="selectedGrad" class="form-control" onchange="this.form.submit()">
                        @foreach (var item in ViewBag.Gradovi)
                        {
                            <option value="@item.Value" selected="@(item.Selected)">@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label for="selectedTransmisija">Transmisija:</label>
                    <select name="selectedTransmisija" id="selectedTransmisija" class="form-control" onchange="this.form.submit()">
                        @* Pretpostavka je da se lista popunjava iz ViewBag-a *@
                        @foreach (var item in ViewBag.Transmisije)
                        {
                            <option value="@item.Value" selected="@(item.Selected)">@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label for="selectedGorivo">Gorivo:</label>
                    <select name="selectedGorivo" id="selectedGorivo" class="form-control" onchange="this.form.submit()">
                        @* Pretpostavka je da se lista popunjava iz ViewBag-a *@
                        @foreach (var item in ViewBag.Goriva)
                        {
                            <option value="@item.Value" selected="@(item.Selected)">@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                @* Removed d-flex align-items-end *@
                <div class="form-group" style="padding-top: 32px;">
                    @* Added padding-top to align the button * If you have more options just change the padding top *@
                    <button type="submit" class="btn btn-info w-100">Filtriraj</button>
                </div>
            </div>
        </div>
    </form>
    <div class="vehicle-grid">
        @foreach (var vozilo in Model)
        {
            <div class="vehicle-card">
                <div class="vehicle-image-container">
                    <img src="@vozilo.slikaPath" alt="@vozilo.brend @vozilo.model" onerror="this.onerror=null;this.src='/images/placeholder.png';" />
                </div>
                <div class="vehicle-details">
                    <h3 class="model-name">@vozilo.brend @vozilo.model</h3>
                    <p><strong>Grad:</strong> @vozilo.grad</p> @* Dodano prikaz grada *@
                    <a asp-action="Details" asp-route-id="@vozilo.voziloId" class="btn-details">Pogledaj detalje</a>


                    @if (userRole == "administrator")
                    {
                        <div class="action-buttons mt-2">
                            <a asp-controller="Voziloes" asp-action="Edit" asp-route-id="@vozilo.voziloId" class="btn btn-warning btn-sm">Uredi</a>
                            <a asp-controller="Voziloes" asp-action="Delete" asp-route-id="@vozilo.voziloId" class="btn btn-danger btn-sm">Obriši</a>
                        </div>
                    }

                </div>
            </div>
        }
    </div>
</div>

<style>

    body {
        background-image: linear-gradient(rgba(255,255,255,0.7), rgba(255,255,255,0.7)), url('/images/lineupsunc.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 50px;
    }
    /* Opcionalno, dodajte malo stila za dugmad i layout */
    .vozila-container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .vehicle-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        padding: 20px 0;
    }

    .vehicle-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .vehicle-image-container {
        width: 100%;
        height: 200px; /* Fiksna visina za slike */
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f0f0f0; /* Pozadina za slike koje se ne učitaju */
    }

        .vehicle-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Pokriva cijeli kontejner, obrezivanje po potrebi */
        }

    .vehicle-details {
        padding: 15px;
        text-align: center;
    }

    .model-name {
        font-size: 1.2em;
        margin-bottom: 10px;
    }

    .btn-details {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 15px;
        background-color: #E91E63;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 0.9em;
    }

        .btn-details:hover {
            background-color: #E91E63;
        }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 10px;
    }

        .action-buttons .btn {
            padding: 6px 12px;
            font-size: 0.85em;
        }

    /* Novi stilovi za filtriranje */
    .filter-section {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        margin-bottom: 30px;
    }

    .form-group label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

    .btn-info {
        background-color: #E91E63;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-info:hover {
            background-color: #E91E63;
        }
</style>