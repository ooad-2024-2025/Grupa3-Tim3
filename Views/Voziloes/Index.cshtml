@model IEnumerable<VoziBa.Models.Vozilo>
@using Microsoft.AspNetCore.Http // Potrebno za pristup sesiji

@{
    ViewData["Title"] = "Trenutna ponuda vozila:";
    var userRole = Context.Session.GetString("UserRole");
}

<div class="vozila-container">
    <h1 class="text-center my-4">Naša Ponuda Vozila</h1>

    @* Dodajte dugme "Dodaj Novo Vozilo" samo ako je korisnik vlasnik ili administrator *@
    @if (userRole == "vlasnik" || userRole == "administrator")
    {
        <div class="text-right mb-3">
            <a asp-action="Create" class="btn btn-primary">Dodaj Novo Vozilo</a>
        </div>
    }

    <form asp-action="Index" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="selectedBrend">Marka vozila:</label>
                    <select name="selectedBrend" id="selectedBrend" class="form-control" onchange="this.form.submit()">
                        @foreach (var item in ViewBag.Brendovi)
                        {
                            <option value="@item.Value" selected="@(item.Selected)">@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="selectedGrad">Grad:</label>
                    <select name="selectedGrad" id="selectedGrad" class="form-control" onchange="this.form.submit()">
                        @foreach (var item in ViewBag.Gradovi)
                        {
                            <option value="@item.Value" selected="@(item.Selected)">@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-info w-100">Filtriraj</button>
            </div>
        </div>
    </form>
    <div class="vehicle-grid">
        @foreach (var vozilo in Model)
        {
            <div class="vehicle-card">
                <div class="vehicle-image-container">
                    <img src="~/images/@vozilo.slikaPath" alt="@vozilo.brend @vozilo.model" onerror="this.onerror=null;this.src='/images/placeholder.png';" />
                </div>
                <div class="vehicle-details">
                    <h3 class="model-name">@vozilo.brend @vozilo.model</h3>
                    <p><strong>Grad:</strong> @vozilo.grad</p> @* Dodano prikaz grada *@
                    <a asp-action="Details" asp-route-id="@vozilo.voziloId" class="btn-details">Pogledaj detalje</a>

                    @* Prikaz dugmadi "Uredi" i "Obriši" SAMO AKO je prijavljeni korisnik administrator. *@
                    @* Ako želite da vlasnik može uređivati samo svoja vozila, ta logika bi trebala biti u kontroleru,
                ali radi prikaza dugmadi, možete dodati ovdje (mada je manje sigurno bez serverske provjere). *@
                    @if (userRole == "administrator")
                    {
                        <div class="action-buttons mt-2">
                            <a asp-controller="Voziloes" asp-action="Edit" asp-route-id="@vozilo.voziloId" class="btn btn-warning btn-sm">Uredi</a>
                            <a asp-controller="Voziloes" asp-action="Delete" asp-route-id="@vozilo.voziloId" class="btn btn-danger btn-sm">Obriši</a>
                        </div>
                    }
                    @* Ako želite da vlasnik vidi dugmad za svoja vozila (bez obzira na serversku provjeru u kontroleru): *@
                    @* else if (userRole == "vlasnik" && Context.Session.GetString("LoggedInUserId") != null && int.Parse(Context.Session.GetString("LoggedInUserId")) == vozilo.korisnikId)
                {
                <div class="action-buttons mt-2">
                <a asp-controller="Vozila" asp-action="Edit" asp-route-id="@vozilo.voziloId" class="btn btn-warning btn-sm">Uredi</a>
                <a asp-controller="Vozila" asp-action="Delete" asp-route-id="@vozilo.voziloId" class="btn btn-danger btn-sm">Obriši</a>
                </div>
                } *@
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Opcionalno, dodajte malo stila za dugmad i layout */
    .vozila-container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .vehicle-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        padding: 20px 0;
    }

    .vehicle-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .vehicle-image-container {
        width: 100%;
        height: 200px; /* Fiksna visina za slike */
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f0f0f0; /* Pozadina za slike koje se ne učitaju */
    }

        .vehicle-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Pokriva cijeli kontejner, obrezivanje po potrebi */
        }

    .vehicle-details {
        padding: 15px;
        text-align: center;
    }

    .model-name {
        font-size: 1.2em;
        margin-bottom: 10px;
    }

    .btn-details {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 15px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 0.9em;
    }

        .btn-details:hover {
            background-color: #0056b3;
        }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 10px;
    }

        .action-buttons .btn {
            padding: 6px 12px;
            font-size: 0.85em;
        }

    /* Novi stilovi za filtriranje */
    .filter-section {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        margin-bottom: 30px;
    }

    .form-group label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-info:hover {
            background-color: #138496;
        }
</style>