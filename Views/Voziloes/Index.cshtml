@model IEnumerable<VoziBa.Models.Vozilo>

@{
    ViewData["Title"] = "Trenutna ponuda vozila:";
}

<div class="vozila-container">
    <h1>Naša Ponuda Vozila</h1>
    <div class="vehicle-grid">
        @foreach (var vozilo in Model)
        {
            <div class="vehicle-card">
                <div class="vehicle-image-container">
                    <img src="~/images/@vozilo.slikaPath" alt="@vozilo.brend @vozilo.model" onerror="this.onerror=null;this.src='/images/placeholder.png';" />
                </div>
                <div class="vehicle-details">
                    <h3 class="model-name">@vozilo.brend @vozilo.model</h3>
                    <a asp-action="Details" asp-route-id="@vozilo.voziloId" class="btn-details">Pogledaj detalje</a>
                </div>
            </div>
        }
    </div>
</div>
