@model IEnumerable<VoziBa.Models.Vozilo>
@using Microsoft.AspNetCore.Http // Potrebno za pristup sesiji

@{
    ViewData["Title"] = "Trenutna ponuda vozila:";
    // Dohvaćanje uloge korisnika iz sesije.
    // Važno: Pretpostavlja se da je "UserRole" pravilno postavljen u sesiji negdje u vašoj aplikaciji.
    var userRole = Context.Session.GetString("UserRole");
}

<div class="vozila-container">
    <h1 class="text-center my-4">Naša Ponuda Vozila</h1>

    @* Dodajte dugme "Dodaj Novo Vozilo" samo ako je korisnik vlasnik ili administrator *@
    @if (userRole == "vlasnik" || userRole == "administrator")
    {
        <div class="text-right mb-3">
            <a asp-action="Create" class="btn btn-primary">Dodaj Novo Vozilo</a>
        </div>
    }

    <div class="vehicle-grid">
        @foreach (var vozilo in Model)
        {
            <div class="vehicle-card">
                <div class="vehicle-image-container">
                    <img src="~/images/@vozilo.slikaPath" alt="@vozilo.brend @vozilo.model" onerror="this.onerror=null;this.src='/images/placeholder.png';" />
                </div>
                <div class="vehicle-details">
                    <h3 class="model-name">@vozilo.brend @vozilo.model</h3>
                    <a asp-action="Details" asp-route-id="@vozilo.voziloId" class="btn-details">Pogledaj detalje</a>

                    @* Prikaz dugmadi "Uredi" i "Obriši" SAMO AKO je prijavljeni korisnik administrator. *@
                    @* Ako želite da vlasnik može uređivati samo svoja vozila, ta logika bi trebala biti u kontroleru,
                ali radi prikaza dugmadi, možete dodati ovdje (mada je manje sigurno bez serverske provjere). *@
                    @if (userRole == "administrator")
                    {
                        <div class="action-buttons mt-2">
                            <a asp-controller="Vozila" asp-action="Edit" asp-route-id="@vozilo.voziloId" class="btn btn-warning btn-sm">Uredi</a>
                            <a asp-controller="Vozila" asp-action="Delete" asp-route-id="@vozilo.voziloId" class="btn btn-danger btn-sm">Obriši</a>
                        </div>
                    }
                    @* Ako želite da vlasnik vidi dugmad za svoja vozila (bez obzira na serversku provjeru u kontroleru): *@
                    @* else if (userRole == "vlasnik" && Context.Session.GetString("LoggedInUserId") != null && int.Parse(Context.Session.GetString("LoggedInUserId")) == vozilo.korisnikId)
                {
                <div class="action-buttons mt-2">
                <a asp-controller="Vozila" asp-action="Edit" asp-route-id="@vozilo.voziloId" class="btn btn-warning btn-sm">Uredi</a>
                <a asp-controller="Vozila" asp-action="Delete" asp-route-id="@vozilo.voziloId" class="btn btn-danger btn-sm">Obriši</a>
                </div>
                } *@
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Opcionalno, dodajte malo stila za dugmad i layout */
    .vozila-container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .vehicle-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        padding: 20px 0;
    }

    .vehicle-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .vehicle-image-container {
        width: 100%;
        height: 200px; /* Fiksna visina za slike */
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f0f0f0; /* Pozadina za slike koje se ne učitaju */
    }

        .vehicle-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Pokriva cijeli kontejner, obrezivanje po potrebi */
        }

    .vehicle-details {
        padding: 15px;
        text-align: center;
    }

    .model-name {
        font-size: 1.2em;
        margin-bottom: 10px;
    }

    .btn-details {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 15px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 0.9em;
    }

        .btn-details:hover {
            background-color: #0056b3;
        }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 10px;
    }

        .action-buttons .btn {
            padding: 6px 12px;
            font-size: 0.85em;
        }
</style>