@model IEnumerable<VoziBa.Models.Vozilo>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Upravljanje Automobilima";
    var userRole = Context.Session.GetString("UserRole"); // Dohvati ulogu iz sesije
}

<style>
    
    body {
        background: linear-gradient(rgba(255,255,255,0.9), rgba(255,255,255,0.9)), url('/images/lineupsunc.jpg') center/cover no-repeat;
        background-attachment: fixed; 
    }

    
    .content-wrapper {
        background-color: rgba(255, 255, 255, 0.95);
        padding: 40px 60px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        text-align: center;
        width: 90%;
        max-width: 1000px;
        margin: 40px auto; 
    }

    .main-heading {
        color: #ec007f;
        font-size: 3.2em;
        margin-bottom: 10px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .sub-heading {
        color: #666;
        font-size: 1.3em;
        margin-bottom: 30px;
    }

    .vehicle-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .vehicle-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        background-color: white;
    }

    .vehicle-image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f0f0f0;
    }

        .vehicle-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .vehicle-details {
        padding: 15px;
        text-align: center;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .model-name {
        font-size: 1.3em;
        margin-bottom: 10px;
        color: #333;
    }

    .vehicle-details p {
        margin-bottom: 5px;
        color: #555;
    }

    .vehicle-details .btn {
        margin-top: 10px;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin-right: 5px;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
        border: 1px solid #17a2b8;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #212529;
        border: 1px solid #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        border: 1px solid #dc3545;
    }
</style>

<div class="content-wrapper">
    <h1 class="main-heading">UPRAVLJANJE AUTOMOBILIMA</h1>
    <p class="sub-heading">Ispod je lista svih automobila. Administratori mogu pregledati, uređivati i brisati vozila.</p>



    <div class="vehicle-grid">
        @foreach (var vozilo in Model)
        {
            <div class="vehicle-card">
                <div class="vehicle-image-container">
                    @* Proveri putanju do slika. Pretpostavlja se da su u wwwroot/images/ *@
                    <img src="~/images/@vozilo.slikaPath" alt="@vozilo.brend @vozilo.model" onerror="this.onerror=null;this.src='/images/placeholder.png';" />
                </div>
                <div class="vehicle-details">
                    <h3 class="model-name">@vozilo.brend @vozilo.model</h3>
                    <p>Godina: @vozilo.godinaProizvodnje</p>
                    <p>Cijena najma: @vozilo.cijenaNajma KM/dan</p>

                    <a asp-action="Details" asp-route-id="@vozilo.voziloId" class="btn btn-info">Detalji</a>

                    @if (userRole == "administrator") // Prikaz dugmadi Edit i Delete samo za administratora
                    {
                        <a asp-action="Edit" asp-route-id="@vozilo.voziloId" class="btn btn-warning">Uredi</a>
                        <a asp-action="Delete" asp-route-id="@vozilo.voziloId" class="btn btn-danger">Obriši</a>
                    }
                </div>
            </div>
        }
    </div>
</div>