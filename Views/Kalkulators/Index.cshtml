@model IEnumerable<VoziBa.Models.Vozilo>
@{
    ViewData["Title"] = "Kalkulator Troškova";
}

<div class="calculator-background">
    <div class="calculator-container">
        <div class="calculator-form">
            <h1>KALKULATOR TROŠKOVA</h1>

            <form asp-controller="Kalkulators" asp-action="IzracunajTrosak" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="voziloId">ODABRANO AUTO</label>
                    <select id="voziloId" name="voziloId" class="form-control" required>
                        <option value="">Odaberite auto</option>
                        @foreach (var vozilo in Model)
                        {
                            <option value="@vozilo.voziloId">@vozilo.brend @vozilo.model</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="brojDanaRezervacije">BROJ DANA IZNAJMLJIVANJA</label>
                    <select id="brojDanaRezervacije" name="brojDanaRezervacije" class="form-control" required>
                        <option value="">Odaberite broj dana</option>
                        @for (int i = 1; i <= 30; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn-submit">POTVRDI →</button>
            </form>
        </div>

        <div class="calculator-result">
            <div class="result-bubble">
                @if (ViewBag.UkupanTrosak != null)
                {
                    <span>= @ViewBag.UkupanTrosak.ToString("0.00") BAM</span>
                }
                else
                {
                    <span>= 0 BAM</span>
                }
                <i class="fas fa-car-side"></i>
            </div>
        </div>
    </div>
</div>